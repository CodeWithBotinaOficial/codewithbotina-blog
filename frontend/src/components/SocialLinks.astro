---
import { Instagram, Facebook, Linkedin, Youtube, Github, Globe } from 'lucide-astro';

interface Props {
  className?: string;
  iconSize?: number;
}

const { className = "flex gap-4", iconSize = 24 } = Astro.props;

const socialLinks = [
  { name: "Instagram", url: import.meta.env.PUBLIC_INSTAGRAM_URL, icon: Instagram },
  { name: "Facebook", url: import.meta.env.PUBLIC_FACEBOOK_URL, icon: Facebook },
  { name: "LinkedIn", url: import.meta.env.PUBLIC_LINKEDIN_URL, icon: Linkedin },
  { name: "YouTube", url: import.meta.env.PUBLIC_YOUTUBE_URL, icon: Youtube },
  { name: "GitHub", url: import.meta.env.PUBLIC_GITHUB_URL, icon: Github },
  { name: "Portfolio", url: import.meta.env.PUBLIC_PORTFOLIO_URL, icon: Globe },
];
---

<div class={className}>
  {socialLinks.filter(link => link.url).map((link) => (
    <a
      href={link.url}
      target="_blank"
      rel="noopener noreferrer"
      aria-label={`Follow on ${link.name}`}
      class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent-primary)] transition-colors duration-200"
    >
      <link.icon size={iconSize} />
    </a>
  ))}
</div>
