---
import BaseLayout from '../components/BaseLayout.astro';
import { ArrowLeft, Search } from 'lucide-astro';
---

<BaseLayout title="Page Not Found" description="The page you are looking for does not exist.">
  <div class="container-responsive min-h-[70vh] flex flex-col items-center justify-center text-center py-20">
    <div class="text-[10rem] font-bold text-[var(--color-bg-subtle)] leading-none select-none">
      404
    </div>
    <h1 class="text-4xl font-bold mb-4 -mt-12 relative z-10">Page Not Found</h1>
    <p class="text-xl text-[var(--color-text-secondary)] max-w-md mb-8">
      Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
    </p>

    <div class="flex flex-col sm:flex-row gap-4">
      <a href="/" class="btn-primary flex items-center gap-2">
        <ArrowLeft size={20} />
        Back to Home
      </a>
    </div>
  </div>
</BaseLayout>
